<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN" "http://www.gwtproject.org/doctype/2.8.0/gwt-module.dtd">
<module rename-to="html">
	<inherits name='com.badlogic.gdx.backends.gdx_backends_gwt' />
	<inherits name='com.badlogic.gdx.physics.box2d.box2d-gwt' />
	<inherits name="space.earlygrey.shapedrawer"/>

	<inherits name='TowerDefenseGame' />
	<entry-point class='com.arco.towerdefense.game.client.HtmlLauncher' />
	<set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE'/>
	<set-configuration-property name="gdx.assetpath" value="../core/assets" />
	<set-property name="user.agent" value="gecko1_8, safari"/>
	<extend-configuration-property name="gdx.reflect.include" value="com.arco.towerdefense.game.utils.json.TowerJson" />
	<extend-configuration-property name="gdx.reflect.include" value="com.arco.towerdefense.game.utils.json.LevelJson" />
	<extend-configuration-property name="gdx.reflect.include" value="com.arco.towerdefense.game.utils.json.EnemyJson" />
	<extend-configuration-property name="gdx.reflect.include" value="com.arco.towerdefense.game.utils.json.Wave" />
	<extend-configuration-property name="gdx.reflect.include" value="com.arco.towerdefense.game.utils.json.Spawn" />
	<collapse-property name="user.agent" values="*" />
</module>
